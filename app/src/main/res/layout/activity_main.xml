<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@android:color/black"
    tools:context="com.example.joshua.singlescreenapp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom = "16dp"
        android:src = "@drawable/maplestreet_logo"
        android:id="@+id/guitar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "16sp"
        android:textStyle="bold"
        android:padding = "16dp"
        android:textColor="@color/accentColor"
        android:layout_below = "@id/guitar"
        android:textAlignment="center"
        android:id = "@+id/intro"
        android:text="Welcome to Maple Street Guitars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/intro"
        android:id="@+id/headers"
        android:gravity="left"
        android:textColor="@color/accentColor"
        android:text = "Location:\n\n\nHours:\n\n\n\nDescription:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below = "@id/intro"
        android:layout_alignRight="@id/headers"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:text = "3199 Maple Drive\nAtlanta, GA - 30305\n\nMonday - Thursday, 10am - 8pm\nFriday - Saturday, 10am - 6pm\nClosed Sunday"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/headers"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:text = "This is your hometown guitar shop!\n\nStop in to see the excessive collection of quality instruments from your favorite brands such as Martin, Taylor, Collings, and many more!\n\nAdditionally, head over to the workshop for all of your maintenance and repair needs!"
        />

</RelativeLayout>
